# Backend Environment Variables

# Server address
ADDR=:8080

# JWT configuration
JWT_SECRET=your_super_secret_key_change_me_in_prod
JWT_TTL=30m

# Anon ID HMAC key (used to derive anonymous IDs from device keys)
ANON_HMAC_KEY=your_hmac_key_change_me_in_prod

# DATABASE_URL for PostgreSQL
# Leave empty to use in-memory store (development only)
# Format: postgres://username:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://postgres:password@localhost:5432/anon_db?sslmode=disable

